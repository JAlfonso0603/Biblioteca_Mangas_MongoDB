// Usar la base de datos
use('Biblioteca_Mangas')

// Crear colección
db.createCollection('editoriales', {
    validator:{
        $jsonSchema: {
            bsonType: 'object',
            title: "Objeto con los datos de la editorial encargada del manga.",
            required: ['idEditorial','nombreEditorial','paisEditorial'],
            properties: {
                idEditorial: {
                    bsonType: 'int',
                    description: 'ID de la editorial.'
                },
                nombreEditorial: {
                    bsonType: 'string',
                    description: 'Nombre de la editorial.'
                },
                paisEditorial: {
                    bsonType: 'string',
                    description: 'País donde se localiza la editorial encargada del manga.'
                }
            }
        }
    }
})