// Usar la base de datos
use('Biblioteca_Mangas')

// Crear colección
db.createCollection('grupos', {
    validator:{
        $jsonSchema: {
            bsonType: 'object',
            title: "Objeto que identifica los grupos disponibles para los usuarios del sistema.",
            required: ['idGrupo','nombreGrupo','habilitado'],
            properties: {
                idGrupo: {
                    bsonType: 'int',
                    description: 'ID del Grupo'
                },
                nombreGrupo: {
                    bsonType: 'string',
                    description: 'Nombre del grupo'
                },
                habilitado: {
                    bsonType: 'boolean',
                    description: 'Indica si el grupo está habilitado o no.'
                }
            }
        }
    }
})