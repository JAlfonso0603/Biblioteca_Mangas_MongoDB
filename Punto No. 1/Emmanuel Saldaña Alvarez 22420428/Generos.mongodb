db.createCollection('generos', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            title: 'Validación de la colección Generos',
            required: ['nombreGen', 'habilitado'],
            properties: {
                idGenero: {
                    bsonType: 'int',
                    description: 'ID único del género, equivalente a PRIMARY KEY'
                },
                nombreGen: {
                    bsonType: 'string',
                    description: 'Nombre del género, equivalente a NVARCHAR(50) NOT NULL',
                    maxLength: 50
                },
                descripcionGen: {
                    bsonType: 'string',
                    description: 'Descripción del género, equivalente a NVARCHAR(200) NULL',
                    maxLength: 200
                },
                habilitado: {
                    bsonType: 'bool',
                    description: 'Indica si el género está habilitado, equivalente a BIT NOT NULL DEFAULT 1',
                    enum: [true, false]  // Usamos enum para restringir valores a true o false
                }
            }
        }
    }
});

db.generos.createIndex(
    {idGenero: 1},
    {unique: true}
)

db.generos.createIndex(
    {nombreGen: 1},
    {unique: true}
)